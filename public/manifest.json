{
  "manifest_version": 3,
  "name": "SuperSky",
  "version": "1.0.0",
  "description": "A Chrome Extension built with React and TypeScript",
  "permissions": ["storage", "tabs", "cookies", "activeTab", "alarms"],
  "host_permissions": ["<all_urls>"],
  "action": {},
  "background": {
    "service_worker": "src/background/background.tsx",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["assets/*", "public/*", "chatbubble.mp3"],
      "use_dynamic_url": false
    }
  ]
}
